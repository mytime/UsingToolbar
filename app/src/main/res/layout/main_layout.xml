<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!--
     android:layout_height="?attr/actionBarSize : 系统集成高度
     android:background="?attr/colorPrimary" 系统集成的颜色
     android:elevation="4dp" 凸起高度
     android:theme="@style/ThemeOverlay.AppCompat.ActionBar 主题
     app:popupTheme="@style/ThemeOverlay.AppCompat.Light" 弹出窗风格

    -->
    <!--定义一个工具条-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="2dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <!--定义一个按钮-->
    <Button
        android:id="@+id/btnClick"
        android:text="click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
